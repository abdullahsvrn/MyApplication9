<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.electroniz.myapplication.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:id="@+id/relativelayoutfragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
           >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/editText9"
                android:layout_weight="1"
                android:hint="ürün ara"
                android:layout_marginTop="3dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="New Button"
                android:id="@+id/button"
                android:layout_weight="1" />

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView3" >

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/horizontalScrollView" />
            </ScrollView>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView4" >

            <LinearLayout
                android:id="@+id/YeniUrunGoruntule"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/row_lineer"
            android:visibility="visible">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_weight="1"
                android:id="@+id/Cloum_layer"
                android:visibility="visible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/img_urun_resim"
                    android:visibility="visible"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="New Text"
                    android:id="@+id/txt_urunad"
                    android:foregroundGravity="center"
                    android:visibility="visible"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="New Text"
                    android:id="@+id/txt_urun_fiyat"
                    android:visibility="visible"
                    android:layout_weight="1"
                    android:foregroundGravity="center" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="New Button"
                    android:id="@+id/btn_sepet_ekle"
                    android:background="#e10c0c"
                    android:visibility="visible"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/imageView4"
                    android:foregroundGravity="fill" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="New Text"
                    android:id="@+id/textView4"
                    android:foregroundGravity="center"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="New Text"
                    android:id="@+id/textView5"
                    android:foregroundGravity="center"
                    android:gravity="center" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/button3"
                    android:background="#ff0000" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
